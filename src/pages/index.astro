---
import '@shoelace-style/shoelace/dist/themes/light.css';
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Quiz de Naturalisation - Canton de Neuchâtel</title>
		<meta name="description" content="Quiz de préparation pour la naturalisation suisse dans le canton de Neuchâtel" />
		<style>
			:root {
				--sl-font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
				--primary: #DC0018;
				--text-primary: #1a1a1a;
				--text-secondary: #666;
				--bg-light: #fafafa;
				--border: #e5e5e5;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: var(--sl-font-sans);
				background: #ffffff;
				min-height: 100vh;
				padding: 0;
			}

			quiz-app {
				display: block;
			}
		</style>
	</head>
	<body>
		<quiz-app></quiz-app>
	</body>
	<script>
		import '../components/quiz-app.ts';
		import { setBasePath } from '@shoelace-style/shoelace/dist/utilities/base-path.js';
		setBasePath('https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.15.0/cdn/');
	</script>
</html>
